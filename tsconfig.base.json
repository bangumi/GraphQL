{
  "compilerOptions": {
    "composite": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "declaration": true
  }
}
